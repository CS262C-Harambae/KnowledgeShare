<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.harambe.knowledgeshare.AboutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/aboutLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Search your newsfeed"
        android:id="@+id/searchNewsfeedLabel"
        android:layout_below="@+id/aboutLabel"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KnowledgeShare searches through the titles, authors, and content of existing news items for specific keywords that you type in."
        android:id="@+id/searchNewsfeedInfoLabel"
        android:layout_below="@+id/searchNewsfeedLabel"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Type a word (or phrase) in the search field."
        android:id="@+id/searchNewsfeedStep1Label"
        android:layout_below="@+id/searchNewsfeedInfoLabel"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Click the search button."
        android:id="@+id/searchNewsfeedStep2Label"
        android:layout_below="@+id/searchNewsfeedStep1Label"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Customize your newsfeed"
        android:id="@+id/customizeNewsfeedLabel"
        android:layout_below="@+id/searchNewsfeedStep2Label"
        android:layout_marginTop="39dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KnowledgeShare has filters that allow you to add/remove news articles according to what you want to see in your newsfeed."
        android:id="@+id/customizeNewsfeedInfoLabel"
        android:layout_below="@+id/customizeNewsfeedLabel"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Select the options menu "
        android:id="@+id/customizeNewsfeedStep1Label"
        android:layout_below="@+id/customizeNewsfeedInfoLabel"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/customizeNewsfeedInfoLabel"
        android:layout_toRightOf="@+id/customizeNewsfeedStep1Label"
        android:id="@+id/menuImage"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/menu_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" at the top right corner of"
        android:id="@+id/customizeNewsfeedStep1aLabel"
        android:layout_below="@+id/customizeNewsfeedInfoLabel"
        android:layout_toRightOf="@+id/menuImage"
        android:layout_marginTop="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the home screen."
        android:id="@+id/customizeNewsfeedStep1cLabel"
        android:layout_below="@+id/customizeNewsfeedStep1Label"
        android:layout_marginTop="0dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Select 'Categories' from the drop-down menu."
        android:id="@+id/customizeNewsfeedStep2Label"
        android:layout_below="@+id/customizeNewsfeedStep1cLabel"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Check the box next to the category of interest."
        android:id="@+id/customizeNewsfeedStep3Label"
        android:layout_below="@+id/customizeNewsfeedStep2Label"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Click 'Apply Filters'."
        android:id="@+id/customizeNewsfeedStep4Label"
        android:layout_below="@+id/customizeNewsfeedStep3Label"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Harambae, © 2016"
        android:id="@+id/copyrightLabel"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>